{
  "compilerOptions": { // 编译选项
    "target": "es2016", // 配置编译目标代码的版本标准
    "module": "commonjs", // 配置编译目标使用的模块化标准
    "lib": ["es2016"], // 配置代码环境
    "outDir": "./dist", // 编译输出的目录
    "strictNullChecks": true, // 更加严格的null和undefined检查
    "removeComments": true, // 编译结果去掉注释
    "noImplicitUseStrict": true, // 编译结果不使用严格模式
    "noEmitOnError": true, // 错误时不生成编译结果
    "moduleResolution": "node", // 设置解析模块的策略
    "esModuleInterop": true, // 启用es模块化交互非es模块导出
    // "strictPropertyInitialization": true, // 更加严格的检查属性有没有初始化
    "noImplicitAny": true,
    "experimentalDecorators": true, // 实验模式的装饰器
    "emitDecoratorMetadata": true
  },
  "include": ["./src"]// 编译的目录
  // "files": ["./src/index.ts"] // 编译指定文件
}
